<?xml version="1.0" encoding="UTF-8"?>
<!-- 自定义简单内容类型 -->
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
	
	<xs:element name="root">
		<xs:complexType>
			<xs:simpleContent >
				<xs:extension base="xs:string">
					<xs:attribute name="name" type="xs:string" use="optional"/>
				</xs:extension>
			</xs:simpleContent>
		</xs:complexType>
	</xs:element>
	
</xs:schema>